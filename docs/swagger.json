{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "title": "Spotify API",
        "contact": {},
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "0.0.1"
    },
    "host": "localhost:50000",
    "basePath": "/api",
    "paths": {
        "/analyze": {
            "get": {
                "description": "Uses the provided Bearer token to fetch the user’s top tracks and audio features, then returns Archetype and top genres.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "analyze"
                ],
                "summary": "Analyze user music data",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bearer token (add 'Bearer ' prefix to token)",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Analysis metrics",
                        "schema": {
                            "$ref": "#/definitions/pkg.Summary"
                        }
                    },
                    "401": {
                        "description": "Missing or invalid token",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Analysis error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/callback/spotify": {
            "get": {
                "description": "Verifies state, exchanges code for an access token, fetches the current user and returns their email and token info.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Spotify OAuth2 callback",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Original state value for CSRF protection",
                        "name": "state",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Authorization code returned by Spotify",
                        "name": "code",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns the user’s email, the access token, and its TTL in seconds",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid or missing state or code",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Token exchange or user-info fetch failure",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/login/spotify": {
            "get": {
                "description": "Redirects the user to the Spotify authorization page.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Initiate Spotify login",
                "responses": {
                    "200": {
                        "description": "Redirect to Spotify OAuth"
                    }
                }
            }
        }
    },
    "definitions": {
        "pkg.Summary": {
            "type": "object",
            "properties": {
                "archetype": {
                    "type": "string"
                },
                "top_artists": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "top_genres": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "externalDocs": {
        "description": "OpenAPI",
        "url": "https://swagger.io/resources/open-api/"
    }
}